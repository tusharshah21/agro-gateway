doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Shopping Details Form
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css', integrity='sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==', crossorigin='anonymous', referrerpolicy='no-referrer')
    link(href='https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp', rel='stylesheet')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH', crossorigin='anonymous')
    link(rel='stylesheet', href='css/customer.css')
    link(rel='stylesheet', href='css/gp_cart.css')
  body
    nav.navbar.fixed-top.navbar-expand-lg.s
      .container-fluid
        a.navbar-brand(href='/')
          img(src='images/logo.png', alt='logo')
          span.sup.fw-bold Ufarm
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
          span.material-icons-outlined menu
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mx-auto.text-center
            li.nav-item.px-2.py-2
              a.nav-link(href='#header') Home
            li.nav-item.px-2.py-2
              a.nav-link(href='#collection') Collection
            li.nav-item.px-2.py-2
              a.nav-link(href='#special') Specials
            li.nav-item.px-2.py-2
              a.nav-link(href='#about') About us
          a.position-relative.mx-5(href='#')
            span.material-icons-outlined.ms-4 search
          a.position-relative(href='#')
            span.material-icons-outlined.py-1 mail
            small.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-success 2+
          a.position-relative.ms-3(href='#')
            span.material-icons-outlined.py-1 favorite_border
            small.position-absolute.top-0.start-100.translate-middle.badge.rounded-pill.bg-success 2+
          a.position-relative(href='#', data-bs-toggle='dropdown')
            span.material-icons-outlined.ms-4 account_circle
          ul.dropdown-menu.dropdown-menu-end.dropdown
            li.dropdown-header
              h5.text-dark #{user.uniquenumber}
              p.text-capitalized #{user.role}
            li
              hr.dropdown-divider
            li
              a.dropdown-item.d-flex.align-items-center(href='users-profile.html')
                span.material-icons-outlined person
                span My Profile
            li
              hr.dropdown-divider
            li
              a.dropdown-item.d-flex.align-items-center(href='users-profile.html')
                span.material-icons-outlined settings
                span Account Settings
            li
              hr.dropdown-divider
            li
              a.dropdown-item.d-flex.align-items-center(href='pages-faq.html')
                span.material-icons-outlined help_outline
                span Need Help?
            li
              hr.dropdown-divider
            li
              a.dropdown-item.d-flex.align-items-center(href='#')
                span.material-icons-outlined logout
                form(action='/login/logout', method='post')
                  button.btn(type='submit') Logout
    form#shopping-form(action='/submit', method='post')
      label(for='name') Name:
      input(type='text', id='name', name='name', required)
      
      label(for='contact') Contact:
      input(type='text', id='contact', name='contact', required)
      
      label(for='email') Email:
      input(type='email', id='email', name='email', required)
      
      label(for='address') Address:
      textarea(id='address', name='address', rows='4', required)
      
      label(for='feature') Select Feature:
      select(id='feature', name='feature')
        option(value='Free Shipping') Free Shipping
        option(value='Discount Coupon') Discount Coupon
        option(value='Express Delivery') Express Delivery
      
      button(type='submit') Submit